@import '../global-variables';

#single-novo {
    #section-1 {
        height: 432px;

        .bg {
            width: 100%;
            position: absolute;
            object-fit: cover;
            height: 420px;
            object-position: bottom;
            filter: brightness(0.6);
        }

        .content {
            z-index: 1;

            // @media screen and (min-width: desktop-min) {
            // max-width: 474px;
            // }
            .title {
                font-size: 61.16px;
                color: cor4;
                text-transform: uppercase;
                font-weight: regular;
                margin: 0;
                padding-top: 40px;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    font-size: 38.16px;
                }
            }

            .title-min {
                font-size: 28.76px;
                color: cor4;

                @media screen and (min-width: desktop-min) {
                    max-width: 400px;
                    display: block;
                }

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    font-size: 21.76px;
                }
            }
        }

        .content-form {
            z-index: 1;

            .model-side-form-1 {
                @media screen and (min-width: desktop-min) {
                    width: 315px;
                    float: right;
                }
            }
        }
    }

    @import '../components/forms/model-1';

    #section-2 {
        .row-video {
            * {
                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    text-align: left !important;
                }
            }

            p {
                @media screen and (min-width: desktop-min) {
                    max-width: 522px;
                    margin: 0 auto;
                    margin-bottom: 30px;
                }
            }

            iframe {
                @media screen and (min-width: desktop-min) {
                    max-width: 800px;
                    width: 800px;
                    height: 400px !important;
                }

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    width: 100%;
                    height: 273px !important;
                }
            }
        }

        .tab-pane-versoes {
            // @media screen and (min-width: desktop-min) {
            // margin-top: 89px;
            // }
            .accordion-button {
                font-size: 16px;
                padding: 8px;
                padding-top: 5px;
                padding-bottom: 5px;
                border-radius: 10px;

                i {
                    font-size: 16px;
                }
            }

            .accordion-info .accordion-item {
                border-radius: 8px;
            }

            table td {
                vertical-align: middle;
            }
        }

        .bg-tabs-intro {
            background-color: cor8;
            height: 69px;
            display: flex;
            align-items: center;
            margin-top: -13px;
            margin-bottom: 21px;

            // @media screen and (min-width: desktop-min) {
            //     margin-bottom: 121px;
            // }

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                height: 108px;
            }
        }

        .tab-content {
            .container {
                padding: 0px;
            }

            .col-right {
                @media screen and (min-width: desktop-min) {
                    padding: 0;
                    padding-left: 35px;
                }
            }
        }

        .tabs-indice-page {
            display: flex;
            align-items: center;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                display: block;
                text-align: center;
                margin-top: -2px;
            }

            a {
                color: cor5;
                font-weight: w-medium;
                font-size: 18px;
                z-index: 99999;
                padding: 0;
                background-color: transparent;
                border: none !important;
                height: 100%;

                &:after {
                    @media screen and (min-width: desktop-min) {
                        content: '';
                        border-right: 1px solid cor5;
                        padding-left: 14px;
                        margin-right: 14px;
                    }
                }
            }

            a:last-child {
                padding-right: 0 !important;

                &:after {
                    content: '';
                    border-right: 0px;
                    padding-left: 0px;
                }
            }

            .nav-link span {
                font-size: 16px;
                background: transparent;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    font-size: 14px;
                }
            }

            .nav-link.active span {
                font-weight: w-bold;
                margin-top: -10px;
                background-color: cor3;
                color: cor4;
                border: none;
                padding: 10px;
                border-radius: 7px;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    padding: 7px;
                }
            }
        }

        .nav-tabs {
            border: none;
        }

        .article-model-items {

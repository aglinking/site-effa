                justify-content: center;
                margin-bottom: 15px;
            }

            .box {
                flex-direction: column;
                justify-content: space-between;
                display: flex;
                align-items: center;

                @media screen and (min-width: desktop-min) {
                    max-width: 333px;
                }

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    border-bottom: 1px solid cor8;
                    padding-bottom: 10px;
                    margin-bottom: 31px;
                    width: 100%;
                }

                .title {
                    font-size: 20px;
                    font-weight: w-medium;
                    text-transform: uppercase;

                    @media screen and (min-width: desktop-min) {
                        max-width: 231px;
                    }
                }

                .txt {
                    font-size: 14px;
                    color: cor7;
                    margin: 0;
                }
            }

            .line {
                padding: 1px;
                background-color: cor8;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    display: none;
                }
            }
        }

        .article-padrao-titulo-e-texto {
            margin-bottom: 51px;

            .title {
                font-size: 28px;
                font-weight: w-medium;
                text-transform: uppercase;
                color: cor1;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    font-size: size-title-large-mob;
                    margin-bottom: 25px;
                }
            }
        }

        .article-select-car-image {
            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                margin-bottom: 17px;
            }

            .line-reverse {
                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    flex-direction: column-reverse;
                }
            }

            .box-veicle {
                display: flex;
                flex-wrap: wrap;
                gap: 10px;
                justify-content: center;

                img {
                    height: 100px;
                    cursor: pointer;
                }

                .active {
                    border: 2px solid cor1;
                }
            }

            #image-veicle {
                width: 100%;
                object-position: center;
            }
        }

        .article-select-color-and-car-image {
            margin-bottom: 72px;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                margin-bottom: 38px;
            }

            .title {
                text-transform: uppercase;
                font-size: 42.9px;
                margin-bottom: 26px;
                margin: 0px;
                color: cor1;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    font-size: size-title-large-mob;
                }
            }

            .name-color {
                text-transform: uppercase;
                font-size: 19.89px;
                display: block;
                margin-bottom: 10px;
            }

            #image-color {
                width: 100%;
            }

            .box-colors {
                display: flex;
                flex-wrap: wrap;
                gap: 23px;
                align-items: center;

                .protect-color {
                    border-radius: 100px;
                    padding: 4px;
                }

                .border-generic-select {
                    border: 1px solid lightgray;
                    border-radius: 100%;
                }

                .protect-color:not(.active) {
                    border: none !important;
                    cursor: pointer;
                    transition: 0.1s linear;

                    &:hover {
                        border: 5px solid !important;
                        transition: 0.1s linear;
                    }
                }

                .color {
                    width: 23px;
                    height: 23px;
                    border-radius: 100px;
                    display: block;
                }
            }
        }

        .title-generics {
            .title {
                font-size: 25.9px;
                text-transform: uppercase;
                color: cor1;

                // line-height: 36px;
                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    font-size: 25px;
                }

                span {
                    font-size: 28px;
                    font-weight: w-medium;
                    text-transform: uppercase;
                    color: cor1;

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        font-size: 25px;
                    }
                }

                .span-2 {
                    font-size: 25.9px;
                    text-transform: uppercase;

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        font-size: 25px;
                    }
                }
            }
        }

        .article-titulo-e-texto-variant-colors {
            margin-bottom: 17px;
        }

        .article-galery {
            margin-bottom: 66px;

            @media screen and (min-width: desktop-min) {
                margin-top: 41px;
            }

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                margin-bottom: 38px;
            }

            .column-content {
                display: flex;
                flex-wrap: wrap;
                gap: 0px;
                justify-content: center;

                a {
                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 50%;
                    }
                }

                img {
                    width: 404px;
                    height: 204px;
                    object-fit: cover;

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 100%;
                        height: 78px;
                    }
                }

                .button-more-galery {
                    background-color: cor9;
                    width: 404px;
                    height: 204px;
                    display: flex;
                    justify-content: center;
                    flex-flow: column;
                    text-align: center;
                    color: cor4;
                    font-weight: w-bold;
                    border-bottom: 7px solid cor9;
                    transition: 0.4s linear;

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 50%;
                        height: 78px;
                    }

                    &:hover {
                        border-bottom: 7px solid cor3;
                        transition: 0.4s linear;
                    }

                    span {
                        width: 100%;
                        display: block;
                        margin-top: 30px;
                        color: cor3;
                        font-weight: w-medium;

                        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                            margin-top: 3px;
                        }
                    }
                }
            }
        }

        .article-image-min-text-and-title {
            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                margin-bottom: 30px;
            }

            @media screen and (min-width: desktop-min) {
                margin-bottom: 58px;
            }

            .img-comp {
                width: 100%;
                height: 294px;
                object-fit: cover;
                object-position: center;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    width: 100%;
                    float: none;
                    height: 135px;
                }
            }

            .title {
                @media screen and (min-width: desktop-min) {
                    margin-bottom: 23px;
                }
            }

            p {
                @media screen and (min-width: desktop-min) {
                    margin-bottom: 0px;
                }
            }
        }

        .article-image-right-large-text-and-title {
            margin-bottom: 60px;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                margin-bottom: 38px;
            }

            .img-comp {
                width: 773px;
                height: 323px;
                float: right;
                object-fit: cover;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    width: 100%;
                    float: none;
                    height: 135px;
                }
            }

            .col-right {
                @media screen and (min-width: desktop-min) {
                    width: 64.666667%;
                }
            }

            .col-left {
                @media screen and (min-width: desktop-min) {
                    width: 35.333333%;
                }
            }

            .title {
                margin-bottom: 23px;
            }

            .span-2 {
                span {
                    font-size: 42.9px;
                    font-weight: regular;

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        font-size: 25px;
                    }
                }
            }

            p {
                @media screen and (min-width: desktop-min) {
                    margin-bottom: 0px;
                }
            }
        }

        .article-image-left-large-text-and-title {
            margin-bottom: 60px;

            .img-comp {
                width: 773px;
                height: 323px;
                float: left;
                object-fit: cover;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    width: 100%;
                    float: none;
                    height: 135px;
                }
            }

            .col-left {
                @media screen and (min-width: desktop-min) {
                    width: 64.666667%;
                }
            }

            .col-right {
                @media screen and (min-width: desktop-min) {
                    width: 35.333333%;
                    padding-left: 19px;
                }
            }

            .title {
                margin-bottom: 23px;
            }

            .span-2 {
                span {
                    font-size: 42.9px;
                    font-weight: regular;
                }
            }

            p {
                @media screen and (min-width: desktop-min) {
                    margin-bottom: 0px;
                }
            }
        }

        .title br {
            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                display: none;
            }
        }
    }

    .container-of-padding-mob {
        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            padding: 0;
        }
    }

    .tab-pane-versoes {
        .splide-model-select {
            margin-bottom: 30px;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                margin-bottom: 54px;
            }

            .splide__track {
                height: fit-content;

                @media screen and (min-width: desktop-min) {
                    padding-left: 0px;
                    padding-right: 0px;
                    max-width: 1153px;
                    margin: 0 auto;
                }
            }

            .splide__slider {
                img {
                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    }
                }
            }

            .splide__slide {
                @media screen and (min-width: desktop-min) {
                    margin-left: 10px;
                    margin-right: 41px;
                    text-align: center;
                }

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    margin-right: 20px;
                    text-align: center;
                    width: 100%;
                }

                img {
                    @media screen and (min-width: desktop-min) {
                        width: 250px;
                        height: 85%;
                        opacity: 50%;
                        object-fit: contain;
                        object-position: center;
                    }

                    width: 100%;

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 177px !important;
                    }
                }

                .title {
                    text-align: center;
                    font-size: 18px;
                    font-weight: w-medium;

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        margin-top: 10px;
                        font-size: 17px;
                    }
                }
            }

            .splide__slide.is-active {
                img {
                    opacity: 100% !important;
                }
            }

            .splide__arrow {
                background: transparent !important;

                svg {
                    fill: cor2;
                }
            }

            .splide__arrow--prev {
                left: -7px;
            }

            .splide__arrow--next {
                right: -7px;
            }
        }

        .accordion-info {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 76px;
            row-gap: 10px;

            .accordion-item {
                width: 100%;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    width: 100%;
                }
            }

            .accordion-body {
                padding: 0;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    overflow-x: scroll;
                }
            }

            tr td:first-child {
                * {
                    font-weight: simibold;
                }

                font-weight: simibold;
            }

            td {
                width: auto;
            }

            tr td {
                font-size: 16px;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    font-size: 14px;
                }
            }

            table {
                --bs-table-bg: transparent;
                --bs-table-accent-bg: transparent;
                --bs-table-striped-color: #212529;
                --bs-table-striped-bg: rgba(0, 0, 0, 0.05);
                --bs-table-active-color: #212529;
                --bs-table-active-bg: rgba(0, 0, 0, 0.1);
                --bs-table-hover-color: #212529;
                --bs-table-hover-bg: rgba(0, 0, 0, 0.075);
                width: 100%;
                margin-bottom: 1rem;
                vertical-align: top;
                border-color: cor8;
            }

            table>:not(caption)>*>* {
                padding: 0.5rem 0.5rem;
                background-color: var(--bs-table-bg);
                border-bottom-width: 1px;
                box-shadow: inset 0 0 0 9999px var(--bs-table-accent-bg);
            }

            table>tbody>tr:nth-of-type(odd)>* {
                background-color: cor8;
            }

            table>tbody {
                vertical-align: inherit;
            }
        }
    }

    .accordion-info {
        margin-bottom: 63px;
        margin-top: 48px;

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            margin-bottom: 40px;
            margin-top: 40px;
        }
    }

    .accordion-item {
        margin-bottom: 10px;
    }

    .accordion-button {
        background-color: transparent;
    }
}


@import '../global-variables';
@import '../globals-sections/section-banner-intro-int';

#servicos {
    #section-1 {
        margin-bottom: 60px;

        .col-left {
            p {
                max-width: 675px;
            }
        }

        .col-right {
            iframe {
                @media screen and (min-width: desktop-min) {
                    width: 489px !important;
                    height: 275px;
                    // position: absolute;
                }

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    width: 100% !important;
                    height: 205px;
                }
            }
        }

        .model-side-form-1 {
            @media screen and (min-width: desktop-min) {
                margin-top: -276px;
                top: 22px;
                position: sticky;
                max-width: 313px;
                float: right;
            }
        }
    }

    #section-2 {
        margin-bottom: 46px;

        .row-2 {
            margin-bottom: 60px;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                margin-bottom: 40px;
            }

            .title-large {
                br {
                    display: none;
                }
            }

            .title-large-min {
                display: block;
            }

            .col-left {
                img {
                    object-fit: cover;
                    object-position: center;

                    @media screen and (min-width: desktop-min) {
                        width: 568px;
                        height: 382px;
                    }

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 100%;
                        height: 186px;
                    }
                }
            }

            .col-right {
                @media screen and (min-width: desktop-min) {
                    padding-left: 23px;
                }

                img {
                    object-fit: cover;
                    object-position: center;

                    @media screen and (min-width: desktop-min) {
                        width: 568px;
                        height: 382px;
                    }

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 100%;
                        height: 186px;
                    }
                }

                p {
                    max-width: 603px;
                }
            }
        }

        .row-3 {
            margin-bottom: 60px;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                margin-bottom: 40px;
            }

            .col-right {
                img {
                    object-fit: cover;
                    object-position: center;

                    @media screen and (min-width: desktop-min) {
                        width: 568px;
                        height: 382px;
                        float: right;
                    }

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 100%;
                        height: 186px;
                        margin-bottom: 20px;
                    }
                }
            }

            .col-left {
                p {
                    max-width: 603px;
                }
            }
        }

        .row-4 {
            .col-right {
                img {
                    object-fit: cover;
                    object-position: center;

                    @media screen and (min-width: desktop-min) {
                        width: 568px;
                        height: 382px;
                        float: right;
                    }

                    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                        width: 100%;
                        height: 186px;
                        margin-bottom: 20px;
                    }
                }
            }

            .col-left {
                p {
                    max-width: 603px;
                }
            }
        }
    }

    #section-3 {
        margin-bottom: 46px;

        .row-2 {
            .column-flex {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                row-gap: 15px;
                margin-top: 15px;
            }

            .item {
                width: 294px;
                height: 189px;
                background-color: cor6;
                padding: 13px;
                border-radius: 12px;
                border: 2px solid cor8;

                @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                    width: 100%;
                    height: fit-content;
                }

                .title {
                    width: fit-content;
                    font-size: 18px;
                    font-weight: simibold;
                    color: cor2;
                    line-height: 18px;
                    display: block;
                }

                p {
                    color: cor2;
                    font-size: 14px;
                    line-height: normal;
                }

                .top {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    margin-bottom: 8px;

                    img {
                        width: fit-content;
                        height: fit-content;
                    }
                }
            }
        }
    }

    @import '../components/forms/model-1';
    @import '../globals-sections/section-unidades';
}
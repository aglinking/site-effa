#section-nossas-unidades {
    margin-bottom: 35px;

    .content {
        display: flex;
        flex-wrap: wrap;
        gap: 11px;
        margin-top: 6px;
    }

    .box-unidade {
        border-radius: 12px;
        border: 2px solid cor8;
        width: 295px;
        position: relative;
        height: fit-content;
        cursor: pointer;

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            width: 100%;
        }

        .card-body {
            border: none;
            padding-top: 0;
            background: transparent;

            address {
                margin-bottom: 14px;
            }

            .links-maps {
                display: flex;
                justify-content: space-between;
                margin-top: 17px;
            }

            .link-telefone {
                width: 49px;
                height: 49px;
                background-color: cor3;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 31px;
                border-radius: 100px;

                i {
                    color: cor4;
                }
            }
        }
    }

    .button-unidades .fa-chevron-down {
        transform: rotate(180deg); /* Define a rotação quando a classe "collapsed" está presente */
    }

    .button-unidades.collapsed .fa-chevron-down {
        transform: rotate(0deg); /* Define a rotação quando a classe "collapsed" está presente */
    }

    .button-unidades {
        border: none;
        background: transparent;
        font-size: 16px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: w-bold;
        color: cor2;
        min-height: 66px;
        justify-content: space-between;
        padding: 12px;
        text-align: left;
        width: 100%;

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            font-size: 15px;
        }

        .fa {
            font-size: 25px;
            color: cor3;
        }

        .fa-chevron-down {
            color: cor2;
            font-size: 22px;
            margin-top: -2px;
            // position: absolute;
            // right: 14px;
        }
    }
}
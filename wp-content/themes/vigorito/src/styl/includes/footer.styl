#footer {
    background-color: cor2;
    padding-top: 37px;
    padding-bottom: 43px;

    * {
        color: cor4;
    }

    .content {
        display: flex;
        flex-wrap: wrap;
        gap: 37px;
        justify-content: space-between;

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            justify-content: center;
        }

        .title {
            font-size: 20px;
            font-weight: w-medium;
            text-transform: uppercase;
            display: block;
            margin-bottom: 20px;
        }
    }

    .column {
        width: 223px;

        .list-links {
            list-style-type: none;
            padding: 0;
            margin-bottom: 60px;

            li {
                margin-bottom: 18px;
            }
        }
    }

    #column-footer-4 {
        width: 171px;

        .img-otimo-footer {
            border-radius: 12px;
            border: 2px solid cor8;
            padding: 7px;
            background-color: cor4;

            img {
                width: 100%;
            }
        }

        .redes-sociais {
            margin-top: 20px;
            display: flex;
            gap: 9px;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                justify-content: center;
            }

            i {
                font-size: 36px;
            }
        }
    }
}

.footer-lps {
    background-color: cor2;
    padding-bottom: 5px;
}

.content-direitos {
    padding-top: 5px;
    padding-bottom: 5px;

    @media screen and (min-width: desktop-min) {
        display: flex;
        justify-content: space-between;
        align-items: self-end;
    }

    @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
        padding-top: 20px;
        padding-bottom: 20px;
        text-align: center;
    }

    * {
        color: cor4;
        margin: 0;
        font-weight: w-bold;
    }

    .direito-linking {
        @media screen and (min-width: desktop-min) {
            display: flex;
            align-items: center;
            gap: 10px;
            text-align: center;
            flex-wrap: wrap;
            justify-content: center;
        }

        @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
            margin-top: 17px;
            display: block;
        }

        &:hover {
            color: cor2;
        }

        a {
            width: 100%;
            margin-top: -7px;
            cursor: pointer !important;
        }

        img {
            width: 79px;

            @media screen and (min-width: mobile-min) and (max-width: tablet-max) {
                display: block;
                margin: 0 auto;
            }
        }
    }
}
